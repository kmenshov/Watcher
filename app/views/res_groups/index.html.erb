<% content_for :top_navbar do %>
  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to 'New Group', new_res_group_path %></li>
  </ul>
<% end %>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Owner</th>
      </tr>
    </thead>
    <tbody>
      <% @res_groups.each do |res_group| %>
        <tr>
          <td><%= link_to res_group.name, res_group %></td>
          <td><%= link_to res_group.user.email, res_group.user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>