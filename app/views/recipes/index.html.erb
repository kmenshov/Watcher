<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<%= form_tag(filter_recipes_path) do %>
  <%= label_tag(:res_group_id, "Filter by group:") %>
  <%= select_tag(:res_group_id, options_for_select(@res_groups_list)) %>
  <%= submit_tag("Switch") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Content</th>
      <th>Res group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.url %></td>
        <td><%= recipe.content %></td>
        <td><%= recipe.res_group.name %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
